<h1 style="text-align: center; color:white;">Bienvenido a control!</h1>


<table border="1" style="text-align: center; background-color:grey; color:white; margin:25px; padding:25px; ">
  <theader>
    <th>ID </th>
    <th>Nombre </th>
    <th>Password </th>
    <th>Accion </th>
  </theader>
  {{#each users}}
  <tr>
    <td>{{id}}</td>
    <td>{{nombre}}</td>
    <td>{{password}} </td>
    <td><a class="btn btn-danger" href="/user/delete/{{id}}">Eliminar</a></td>
  </tr>
  {{else}}
  <tr>
    <td colspan="4">No hay mas filas</td>
  </tr>
  {{/each}}

</table>


<br><br>
<form action="../user/procesar" method="post">
<table border="2" style="text-align: center; background-color:grey; color:white; margin:25px; padding:25px; ">
    <theader>
      <th> - </th>
      <th>ID </th>
      <th>Nombre </th>
      <th>Password </th>
    </theader>
    {{#each users}}
    <tr>
      <td>
        <input type="radio" name="usuario" value="{{nombre}}">
      </td>
      <td>{{id}}</td>
      <td>{{nombre}}</td>
      <td>{{password}} </td>
    </tr>

    {{else}}
    <tr>
      <td colspan="4">No hay mas filas</td>
    </tr>

    {{/each}}
    <td colspan="4">
      <a class="btn btn-success" href="/user/procesar">Enviar</a>
    </td>
  </table>

</form>


<br><br>
