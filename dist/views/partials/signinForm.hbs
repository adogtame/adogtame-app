<div class="container p-5">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="mb-3">
        <div class="card-header" style="background-color:darkcyan; color:lightcyan">
          <h3 style="text-align: center;">Iniciar sesion</h3>
        </div>
        <div class="card-body" style="background-color:lightcyan;">
          <form action="../user/signin" method="post">
            <div class="form-group">
              <div class="container-fluid">
                <div class="mb-3">
                  <label for=""> <strong> ID</strong> </label>
                  <input type="text" name="email" placeholder="Ingrese su id" class="form-control" autofocus>
                </div>
                <div class="mb-3">
                  <label for=""> <strong> Contrase単a</strong> </label>
                  <input type="password" name="password" placeholder="Ingrese su  Contrase単a" class="form-control">
                </div>
                <button class="btn btn-success btn-block">Continuar</button>
                <a href=""> <strong> 多Olvidaste tu contrase単a?</strong></a>

                {{#if error_session}}
                <div class="container p-2">
                  <div class="row">
                    <div class=" mx-auto">
                      <div class="alert alert-danger alert-dismissible fade show " role="alert">
                        <strong style="font-size: 18px;"> 
                        {{error_session}}
                        </strong>
                        <button type="button" class="close" data-dismiss='alert' aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
                {{/if}}
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>