<div class="container p-4">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <div class="mb-3">
        <div class="card-header" style="background-color:darkcyan; color:lightcyan">
          <h3 style="text-align: center;">Registre a su Animal</h3>
        </div>
        <div class="card-body" style="background-color:lightcyan;">
          <form action="" method="post">
            <div class="form-group">
              <div class="container-fluid">
                <div class="mb-3">
                  <div class="mb-3">
                    <label for=""> <strong> Nombre</strong> </label>
                    <input type="text" minlength="4" name="nombre" placeholder="Ingrese su Nombre" class="form-control"
                      autofocus required>
                  </div>
                  <div class="mb-3">
                    <label for="perfiles" class="for"> <strong> Selecccione un genero </strong></label> <br>
                    <select name="tipo_genero" id="generos" class="btn btn-info">
                      <option value="hembra">Hembra</option>
                      <option value="macho">Macho</option>
                    </select>
                  </div>
                  <div class="mb-3">
                    <label for=""> <strong> Edad</strong> </label>
                    <input type="number" min="1" max="20" name="edad" placeholder="Ingrese su Edad" class="form-control"
                      required>
                  </div>
                  <div class="mb-3">
                    <label for=""> <strong> Raza</strong> </label>
                    <input type="text" minlength="4" name="raza" placeholder="Ingrese su Raza" class="form-control"
                      required>
                  </div>
                  <div class="mb-3">
                    <label for=""> <strong> Peso</strong> </label>
                    <input type="text" name="peso" placeholder="Ingrese su Peso en KG" class="form-control" required>
                  </div>

                  <div class="mb-3">
                    <label for="formFileMultiple" class="form-label "> <b> Seleccione las imagenes</b> </label>
                    <input class="form-control btn btn-secondary" type="file" id="formFileMultiple" multiple>
                  </div>

                  <div class="mb-3">
                    <label for=""> <strong> Fecha de nacimiento</strong> </label>
                    <input type="date" name="fechaNacimiento" placeholder="Ingrese su fecha de nacimiento"
                      class="form-control" required>
                  </div>

                  <div class="mb-3">
                    <button class="btn btn-success btn-block">Enviar</button>
                    <input type="reset" value="Limpiar campos" class="btn btn-danger btn-block">
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
