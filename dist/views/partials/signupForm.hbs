// Muestra un formulario u otro dependiendo cual seleccione el usuario
    function mostrar(id) {
        if (id == "persona") {
            $("#persona").show();
            $("#organizacion").hide();
            $("#administrador").hide();
        }
        if (id == "organizacion") {
            $("#persona").hide();
            $("#organizacion").show();
            $("#administrador").hide();
        }
        if (id == "administrador") {
            $("#persona").hide();
            $("#organizacion").hide();
            $("#administrador").show();
        }
        if (id == "opcion") {
            $("#persona").hide();
            $("#organizacion").hide();
            $("#administrador").hide();
        }
    }
</script>

