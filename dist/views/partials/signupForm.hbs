<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="mb-3">
                <div class="card-header" style="background-color:darkcyan; color:lightcyan">
                    <h3 style="text-align: center;">Crear cuenta</h3>
                </div>
                <div class="card-body" style="background-color:lightcyan;">
                    <form action="../user/signup"  method="post">
                        <div class="form-group">
                            <div class="container-fluid">
                                <div class="mb-3">
                                    <label for="perfiles" class="for">Selecccione un perfil:</label>
                                    <select name="tipo_perfil" id="perfiles">
                                        <option value="administrador">Administrador</option>
                                        <option value="persona">Persona</option>
                                        <option value="organizacion">Organizacion</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for=""> <strong> Nombre</strong> </label>
                                    <input type="text" minlength="4" name="nombre" placeholder="Ingrese su Usuario"
                                        class="form-control" autofocus required>
                                </div>
                                <div class="mb-3">
                                    <label for=""> <strong> Apellido</strong> </label>
                                    <input type="text" minlength="4" name="apellido" placeholder="Ingrese su  Apellido"
                                        class="form-control" required>
                                </div>
                                
                                <div class="mb-3">
                                    <label for=""> <strong> Contrase単a</strong> </label>
                                    <input type="password" name="password" placeholder="Ingrese su  Contrase単a"
                                        class="form-control" required minlength="6">
                                </div>
                                <div class="mb-3">
                                    <label for=""> <strong> Repita la contrase単a</strong> </label>
                                    <input type="password" name="repassword" placeholder="Repetir Contrase単a"
                                        class="form-control" minlength="6" required >
                                </div>
                                <div class="mb-3">
                                    <label for=""> <strong> E-mail</strong> </label>
                                    <input type="email" name="email" placeholder="Ingrese su Email"
                                        class="form-control" minlength="10" required>
                                </div>
                                <div class="mb-3">
                                    <label for=""> <strong> DNI</strong> </label>
                                    <input type="number" name="dni" placeholder="Ingrese su  Dni" class="form-control" minlength="7" required>
                                </div>
                                <div class="mb-3">
                                    <label for=""> <strong> Celular</strong> </label>
                                    <input type="tel" name="nro_celular" placeholder="Ingrese su nro de celular"
                                        class="form-control" minlength="8" required>
                                </div>
                                <div class="mb-3">
                                    <label for=""> <strong> Calle</strong> </label>
                                    <input type="text" name="calle" placeholder="Ingrese calle"
                                        class="form-control" minlength="4" required>
                                </div>
                                <div class="mb-3">
                                    <label for=""> <strong> Altura</strong> </label>
                                    <input type="text" name="nro_calle" placeholder="Ingrese altura"
                                        class="form-control" maxlength="5" required>
                                </div>
                                <div class="mb-3">
                                    <button class="btn btn-success btn-block">Enviar</button>
                                    <input type="reset" value="Limpiar campos" class="btn btn-danger btn-block" >
                                </div>
                            </div>
                        </div>
                    </form>
                    <form action="../user/signin" method="post">
                        <div class="form-group">
                            <div class="container-fluid">
                                <a href="signupOrg" class="btn btn-primary btn-block">Crear cuenta de Organizacion</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
